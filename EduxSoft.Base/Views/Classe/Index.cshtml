@model EduxSoft.Base.ViewModels.Classe.IndexClassModel
@using EduxSoft.Base.Code
@using EduxSoft.Base.Models

@section title{ 
Classes
}
<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header">
                <h4 class="box-title">Classes</h4>
                <div class="box-tools pull-right">
                    <span class="label label-primary">Label</span>
                </div>
            </div>
            <div class="box-body">
                @*TAble of content*@
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Section</th>
                                <th>Description</th>
                            </tr>

                        </thead>
                        <tbody>
                            @foreach (var item in Model.Classes)
                            {
                                <tr>
                                    <td></td>
                                    <td>@item.Name</td>
                                    <td>$"{@item.Grade} {@item.Name}"</td>
                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
            <div class="box-footer">
                <div class="margin">
                    <div class="btn-group">
                        <a id="addClassModal" data-toggle="modal" asp-action="Create" data-target="#modal-action-base" class="btn btn-block btn-primary">Nouveau</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>