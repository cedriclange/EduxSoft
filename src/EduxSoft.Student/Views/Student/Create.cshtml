@model  EduxSoft.Student.ViewModels.CreateStudentModel

@section  title{ 
Inscription
}
<div class="row">
    <div class="col-md-8">
        <form asp-action="Enroll" role="form" method="post" class="">
            <div class="box box-primary">
                <div class="box-header">
                    <h4 class="box-title"> Information Personnel</h4>
                </div>
                <div class="box-body form-horizontal">
                    <div class="form-group">
                        <label asp-for="Surname" class="col-sm-3 control-label">Nom</label>
                        <div class="col-sm-6">
                            <input asp-for="Surname" class="form-control admin-label" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="MiddleName" class="col-sm-3 control-label">Post-Nom</label>
                        <div class="col-sm-6">
                            <input asp-for="MiddleName" class="form-control admin-label" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="FirstName" class="col-sm-3 control-label">Prénom</label>
                        <div class="col-sm-6">
                            <input asp-for="FirstName" class="form-control admin-label" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="StudentNumber" class="col-sm-3 control-label">No Elève</label>
                        <div class="col-sm-6">
                            <input asp-for="StudentNumber" class="form-control admin-label" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="DateOfBirth" class="col-sm-3 control-label">Date de naissance</label>
                        <div class="col-sm-6">
                            <input asp-for="DateOfBirth" class="form-control admin-label" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address" class="col-sm-3 control-label">Adresse</label>
                        <div class="col-sm-6">
                            <input asp-for="Address" class="form-control admin-label" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="ClassID" class="col-sm-3 control-label">Classe</label>
                        <div class="col-sm-6">
                            <select asp-for="ClassID" class="form-control">
                                @{
                                    foreach (var item in Model.ClassDrops)
                                    {
                                        <option value="@Html.Raw(item.Id)">@Html.Raw(item.Name)</option>
                                    }
                                }
                            </select>
                        </div>

                    </div>
                    <div class="pull-right">
                        <input type="submit" name="Enregistrer" class="btn btn-block btn-success" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


